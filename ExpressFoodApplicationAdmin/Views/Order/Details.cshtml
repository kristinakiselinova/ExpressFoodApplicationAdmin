@model ExpressFoodApplicationAdmin.Models.DeliveryOrder

<div class="container">
    <h1 class="text-center mb-4" style="font-weight: 600; color: #333;">Order Details</h1>
    <div class="text-center mb-4">
        <p><strong>Order for:</strong> @Model.Customer.UserName</p>
    </div>
    <div class="row">
        @for (int i = 0; i < Model.FoodItemsInOrder.Count(); i++)
        {
            var item = Model.FoodItemsInOrder.ElementAt(i).FoodItem;
            if (i % 3 == 0)
            {
                @:<div class="row mb-4">
            }
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm rounded-3">
                    <img src="@item.FoodItemImage" class="card-img-top rounded-top" alt="Food Item Image" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column" style="background-color: #f8f9fa;">
                        <h5 class="card-title mb-2" style="color: #2c3e50; font-weight: 600;">@item.Name</h5>
                        <p class="card-text text-muted" style="font-size: 0.9rem;">@item.Description</p>
                        <p class="mb-2" style="font-weight: 600;">Price: @item.Price ден.</p>
                    </div>
                </div>
            </div>
            if (i % 3 == 2)
            {
                @:</div>
            }
        }
    </div>
</div>
