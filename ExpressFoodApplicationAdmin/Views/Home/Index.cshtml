@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #2c3e50;">Welcome to the Admin Dashboard</h1>
        <p class="lead text-muted">
            Manage and monitor all aspects of your food delivery platform, including food items, restaurants, orders, payments, and more.
        </p>
    </div>

    <div class="row text-center">
        
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="fas fa-utensils fa-3x mb-3" style="color: #3498db;"></i>
                    <h5 class="fw-semibold" style="color: #2c3e50;">Food Items</h5>
                    <p class="text-muted">Maintain an updated catalog of all food items available for order.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="fas fa-file-export fa-3x mb-3" style="color: #e67e22;"></i>
                    <h5 class="fw-semibold" style="color: #2c3e50;">Export Food Items</h5>
                    <p class="text-muted">Easily export food item data into structured formats for reporting or integration purposes.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body">
                    <i class="fas fa-receipt fa-3x mb-3" style="color: #2ecc71;"></i>
                    <h5 class="fw-semibold" style="color: #2c3e50;">Orders</h5>
                    <p class="text-muted">Track, process, and manage customer orders effectively.</p>
                </div>
            </div>
        </div>
    </div>
</div>
